{
  "coc.preferences.formatOnSaveFiletypes": ["css", "markdown", "javascript", "graphql", "html", "yaml",  "json", "python", "c"],

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,

  // clangd config
  "clangd.enabled": true,
  "clangd.arguments": [],
  "clangd.checkUpdates": false,
  "clangd.disableCompletion": false,
  "clangd.disableDiagnostics": false,
  "clangd.disableSnippetCompletion": false,
  "clangd.compilationDatabasePath": "",
  "clangd.fallbackFlags": [],
  "clangd.path": "~/.config/coc/extensions/coc-clangd-data/install/13.0.0/clangd_13.0.0/bin/clangd",
  "clangd.semanticHighlighting": false,
  "clangd.serverCompletionRanking": true,

  "snippets.ultisnips.directories":
  [
    "UltiSnips",
    "~/.config/nvim/utils/snips"
  ],

  // explorer
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  }

}
